<div class="wrapper" id="sign_up">
  <h3 class= "alert alert alert-light">新規ユーザー登録</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nickname, "ユーザー名" %><span class="badge require">必須</span><br />
      <%= f.text_field :nickname, id:"user_name",class:"form-control"  %>
    </div>

    <div class="field">
      <%= f.label :profile, "プロフィール" %><br />
      <%= f.text_area :profile, id:"user_profile",class:"form-control profile" %>
    </div>

    <div class="field">
      <%= f.label :email %><span class="badge require">必須</span><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control"%>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上、英数字を混合で設定してください）</em>
      <% end %><span class="badge require">必須</span><br />
      <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><span class="badge require">必須</span><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
    </div>


    <div class="field">
      <%= f.label :twitter_url, "Twitterアドレス" %><br />
      <%= f.text_field :twitter_url, id:"twitter_url",class:"form-control" %>
    </div>

    <div class="field">
      <%= f.label :pixiv_url, "Pixivアドレス" %><br />
      <%= f.text_field :pixiv_url, id:"pixiv_url",class:"form-control" %>
    </div>
    
    <div class="field">
      <%= f.label :another_url, "その他連絡用アドレス" %><br />
      <%= f.text_field :another_url, id:"another_url",class:"form-control" %>
    </div>

      <div class="field">
        <%= f.label :imaga, "アバター画像" %><br />
        <%= f.file_field :image %>
      </div>
    


    <div class="actions">
      <%= f.submit "新規登録", class:"btn btn-outline-primary sign_up" %>
    </div>
  <% end %>

</div>
