<div class="wrapper" id="sign_up">
  <h2>新規ユーザー登録画面</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nickname, "ユーザー名(必須)" %><br />
      <%= f.text_field :nickname, id:"user_name" %>
    </div>

    <div class="field">
      <%= f.label :profile, "プロフィール(任意)" %><br />
      <%= f.text_area :profile, id:"user_profile" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>


    <div class="field">
      <%= f.label :twitter_url, "Twitterアドレス(任意)" %><br />
      <%= f.text_field :twitter_url, id:"twitter_url" %>
    </div>

    <div class="field">
      <%= f.label :pixiv_url, "Pixivアドレス(任意)" %><br />
      <%= f.text_field :pixiv_url, id:"pixiv_url" %>
    </div>
    
    <div class="field">
      <%= f.label :another_url, "その他連絡用アドレス(任意)" %><br />
      <%= f.text_field :another_url, id:"another_url" %>
    </div>


    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
