
<div>
  <h2 class="wrapper alert alert-light">マイページ</h2>
</div>

<!-- 2カラム部分 -->
<div class="user_contents wrapper">

  <div class="wrapper user_left">
    <div>
      <% if @user.image.attached? %>
          <%= image_tag @user.image ,class:"user_image"%>        
      <% else  %>
        <%# アバター画像を登録していない場合、デフォルト画像を表示 %>
        <img class="user_image" src="/images/bg2.jpg" alt="">
      <% end %>
    </div>
  </div>
  <div class="wrapper user_right">
      <div class="user_data"><%= "ユーザー名 : #{@user.nickname}" %></div>
      <div class="user_data"><%= "プロフィール : #{@user.profile}" %></div>
      <div class="user_data"><%= "投稿数 : #{@posts.count}" %></div>
      <div class="user_data"><%= "TwitterURL : #{@user.twitter_url}"%></div>
      <div class="user_data"><%= "PixivURL : #{@user.pixiv_url}" %></div>
      <div class="user_data"><%= "その他連絡先 : #{@user.another_url}" %></div>
      <div class="user_data"><%= "総いいね数 : #{@likes_count}/100で卒業!" %></div>
  </div>
</div>

<h2 class ="alert alert-light">投稿イラストの一覧</h2>
<div class="wrapper grid"> 
 <div class="items">
    <% @posts.each do |post| %> 
          <div class='item'>
            <%= link_to post_path(post.id) do %>
            <%= image_tag post.image %><br>
            <%= post.title %><br>
            <%= post.user.nickname %><br>
            <% if post.advice_flag %> 
              <span>アドバイス・指摘等お願いします</span><br>
            <% end  %>
           <% end %>
          

            <%#条件に一致した場合、そのデータはLikeテーブルに存在するのでいいねを表示する%>
                  <span class="fa fa-heart like_btn_on"></span> 
                  <%= Like.where(post_id: post.id).count %> 
        </div>
    <% end  %>

 </div>
</div>
